<!-- header include -->
<%- include('partials/header') %>

  <div class="splash-container">

    <!-- hero section -->
    <section class="hero">
      <h1>üí∞ Crypto Portfolio Tracker</h1>
      <p>Track your cryptocurrency investments and watchlist with ease.</p>
      <a href="#dashboard" class="btn btn-primary">Get Started</a>
    </section>

    <!-- features section -->
    <section class="features">
      <h2>Why Use Crypto Tracker?</h2>

      <div class="feature-cards">

        <!-- feature card 1 -->
        <div class="feature-card">
          <h3>üìä Portfolio Overview</h3>
          <p>See all your investments at a glance and track potential gains.</p>
        </div>

        <!-- feature card 2 -->
        <div class="feature-card">
          <h3>üëÅ Watchlist</h3>
          <p>Keep track of cryptos you plan to buy and set target prices.</p>
        </div>

        <!-- feature card 3 -->
        <div class="feature-card">
          <h3>üìù Notes & Predictions</h3>
          <p>Add your insights or market predictions for each cryptocurrency.</p>
        </div>

      </div>
    </section>

    <!-- dashboard section -->
    <section id="dashboard" class="dashboard">
      <div class="container">

        <!-- form container -->
        <div class="form-container">
          <h2 id="form-title">Add New Crypto</h2>

          <!-- add/edit form -->
          <form id="crypto-form">
            <input type="hidden" id="crypto-id">

            <!-- name + symbol row -->
            <div class="form-row">
              <div class="form-group">
                <label for="name">Cryptocurrency Name *</label>
                <input type="text" id="name" placeholder="e.g., Bitcoin" required>
              </div>
              <div class="form-group">
                <label for="symbol">Symbol *</label>
                <input type="text" id="symbol" placeholder="e.g., BTC" required>
              </div>
            </div>

            <!-- price row -->
            <div class="form-row">
              <div class="form-group">
                <label for="buyPrice">Buy Price ($) *</label>
                <input type="number" id="buyPrice" step="0.01" min="0" placeholder="0.00" required>
              </div>
              <div class="form-group">
                <label for="targetPrice">Target Price ($) *</label>
                <input type="number" id="targetPrice" step="0.01" min="0" placeholder="0.00" required>
              </div>
            </div>

            <!-- status dropdown -->
            <div class="form-group">
              <label for="status">Status *</label>
              <select id="status" required>
                <option value="owned">Owned (Portfolio)</option>
                <option value="watchlist">Watchlist (Plan to Buy)</option>
              </select>
            </div>

            <!-- notes textarea -->
            <div class="form-group">
              <label for="notes">Notes / Predictions</label>
              <textarea id="notes" rows="3" placeholder="Add your predictions or notes here..."></textarea>
            </div>

            <!-- form buttons -->
            <div class="form-actions">
              <button type="submit" class="btn btn-primary">
                <span id="submit-text">Add Crypto</span>
              </button>
              <button type="button" class="btn btn-secondary" id="cancel-btn" style="display:none;">Cancel</button>
            </div>
          </form>
        </div>

        <!-- crypto list -->
        <div class="crypto-list">
          <div class="list-header">
            <h2>My Cryptocurrencies</h2>

            <!-- filter buttons -->
            <div class="filter-tabs">
              <button class="tab-btn active" data-filter="all">All</button>
              <button class="tab-btn" data-filter="owned">Portfolio</button>
              <button class="tab-btn" data-filter="watchlist">Watchlist</button>
            </div>
          </div>

          <!-- crypto items container -->
          <div id="crypto-items">
            <% if (cryptos.length===0) { %>
              <p class="empty-message">No cryptocurrencies added yet. Add one above!</p>
              <% } %>
          </div>
        </div>

      </div>
    </section>
  </div>

  <!-- footer include -->
  <%- include('partials/footer') %>